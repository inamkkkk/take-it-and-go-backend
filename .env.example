# Node Environment
NODE_ENV=development
PORT=3000

# MongoDB
MONGODB_URL=mongodb://localhost:27017/takeitgo

# JWT
JWT_SECRET=supersecretjwtkeythatshouldbeverylongandrandom
JWT_ACCESS_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=30

# Payment Integrations (Razorpay/Stripe - choose one or both)
# TODO: If using Razorpay, uncomment and set RAZORPAY_KEY_ID and RAZORPAY_KEY_SECRET
# RAZORPAY_KEY_ID=rzp_test_YOUR_KEY_ID
# RAZORPAY_KEY_SECRET=YOUR_KEY_SECRET

# TODO: If using Stripe, uncomment and set STRIPE_SECRET_KEY
# STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY

# Google Maps API
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY

# Firebase Cloud Messaging
FCM_SERVER_KEY=YOUR_FCM_SERVER_KEY_FROM_FIREBASE_CONSOLE

# Redis (for sessions, caching, token storage)
REDIS_URL=redis://localhost:6379